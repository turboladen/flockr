<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="jumbotron">
      <p>
        <%= image_tag(@photo.image_url(:default_view)) %>
      </p>

      <hr/>

      <p>
        <%= link_to 'View original', @photo.image_url, class: 'pull-right' %>
      </p>

      <p>
        <h3><%= @photo.file_name %></h3>
      </p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if current_user == @user %>
        <%= link_to edit_user_photo_path(@user, @photo) do %>
            <button type="button" class="btn btn-info btn-xs">
              <span class="glyphicon glyphicon-cog"></span>
              Edit
            </button>
        <% end %>
    <% end %>
    <%= link_to user_photos_path(@user) do %>
        <button type="button" class="btn btn-default btn-xs">
          <span class="glyphicon glyphicon-backward"></span>
          Back
        </button>
    <% end %>
  </div>
</div>


