<h3>Photos</h3>

<table class="table">
  <thead>
    <tr>
      <th>File name</th>
      <th>Photo</th>
      <% if current_user == user %>
          <th></th>
          <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% user.photos.each do |photo| %>
      <tr>
        <td><%= link_to photo.file_name, user_photo_path(user, photo), class: 'btn btn-link' %></td>
        <td><%= link_to (image_tag(photo.image_url(:thumb), class: 'img-thumbnail')), user_photo_path(user, photo) %></td>
        <% if current_user == user %>
            <td><%= link_to 'Edit', edit_user_photo_path(user, photo), class: 'btn: btn-warning btn-xs' %></td>
            <td><%= link_to 'Destroy', user_photo_path(user, photo), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<hr/>

<%= link_to 'New Photo', new_user_photo_path(user), class: 'btn btn-primary pull-right' %>
