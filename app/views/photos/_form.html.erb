        <div class="form-group">
          <%= image_tag(@photo.image_url(:thumb), class: 'img-thumbnail') if @photo.image? %>
        </div>
    <% end %>

  <div class="form-group">
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Add Photo', class: 'btn btn-primary' %>
  </div>
<% end %>
